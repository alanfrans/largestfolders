<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <AssemblyName>LargestFolders</AssemblyName>
    <Version>1.0.0</Version>
    <Description>Windows application that displays the largest folders on the C: drive</Description>
    <ApplicationIcon>folder.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="folder.ico" />
    <EmbeddedResource Include="folder.ico" />
  </ItemGroup>

</Project>